/* */
--sl-color-accent-low: var(--background-color);
--sl-color-accent-high: var(--tertiary-color);
--sl-color-accent:var(--main-color);
--sl-color-black: var(--background-doc-color);
--sl-color-gray-1: #d8eefe;
--sl-color-gray-2: #d8eefe;
--sl-color-gray-3: #d8eefe;
--sl-color-gray-4: #d8eefe;
--sl-color-gray-5: var(--background-color);
--sl-color-gray-6: #d8eefe;
--sl-color-white: var(--primary-color);
}
/* Light mode colors. */
:root[data-theme='light'] {
--sl-color-accent-low: #90b4ce;
--sl-color-accent-high: #ef4565;
--sl-color-accent: var(--primary-color);
--sl-color-white: #094067;
--sl-color-gray-1: #5f6c7b;
--sl-color-gray-2: #5f6c7b;
--sl-color-gray-3: #5f6c7b;
--sl-color-gray-4: #5f6c7b;
--sl-color-gray-5: #353841;
--sl-color-gray-6: #d8eefe;
--sl-color-black: #fffffe;


}

:global(:root) {
--ec-frm-trmBg: #cde0ee !important;
--ec-frm-edBg: #cde0ee !important;
--ec-frm-trmTtbBg: #cde0ee !important; 
--ec-brdCol: var(--background-color); !important;
}

:global(.expressive-code .frame) {
box-shadow: none !important;

}
:global(.expressive-code *) {
border: none !important;
}

:global(.expressive-code pre) {
border-top-left-radius: 0px !important;
border-top-right-radius: 0px !important;
border-bottom-right-radius: 8px !important;
border-bottom-left-radius: 8px !important;
}



:global(.default) {
--sl-color-border-badge: #094067 !important;


}







.copy {
	flex-direction: column;
	gap: 1rem;
	align-items: center;
}

.copy > * {
	max-width: 50ch;
}

h1 {
	font-size: clamp(var(--sl-text-3xl), calc(0.25rem + 5vw), var(--sl-text-6xl));
	line-height: var(--sl-line-height-headings);
	font-weight: 600;
	color: var(--sl-color-white);
}

.tagline {
	font-size: clamp(var(--sl-text-base), calc(0.0625rem + 2vw), var(--sl-text-xl));
	color: var(--sl-color-gray-2);
}

.actions {
	gap: 1rem 2rem;
	flex-wrap: wrap;
	justify-content: center;
}

@media (min-width: 50rem) {
	

	.copy {
		align-items: center;
	}

	.actions {
		justify-content: center;
	}
}
* {
  animation-play-state: var(--animation-play-state, running) !important;
}
</style>
<script>
	// Función para pausar todas las animaciones
	function pauseAllAnimations() {
	  document.documentElement.style.setProperty('--animation-play-state', 'paused');
	}
	
	// Función para reanudar todas las animaciones
	function resumeAllAnimations() {
	  document.documentElement.style.setProperty('--animation-play-state', 'running');
	}
	
	// Pausar todas las animaciones al cargar el script
	pauseAllAnimations();
	
	// Reanudar todas las animaciones cuando el DOM esté completamente cargado
	window.addEventListener('DOMContentLoaded', (event) => {
	  resumeAllAnimations();
	});
	</script>
