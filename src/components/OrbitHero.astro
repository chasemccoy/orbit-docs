        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
        <div class="spoke reduce-80 outer-orbit vector"></div>
      </div>
      <div class="medium-orbit orbit-7 solid  from-0 range-63 ccw  object-animation">
        <div class="shape-one-animation satellite sync-rotation shapes angle-45" >
